<% content_for :page_title do %>
  <%= Spree.t(:new_banner) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back_to_banners_list), spree.admin_banners_path, :icon => 'arrow-left' %>
  </li>
<% end %>

<%= render "spree/shared/error_messages", :target => @banner %>

<%= form_for [:admin, @banner], url: admin_banners_url, method: :post do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <div data-hook="admin_banner_new_form_buttons">
    <%= render :partial => 'spree/admin/shared/new_resource_links' %>
  </div>
<% end %>